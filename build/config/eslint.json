{
  "extends": "airbnb",
  "globals": {
    "NylasEnv": false,
    "$n": false,
    "waitsForPromise": false
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "rules": {
    "react/prop-types": [2, {"ignore": ["children"]}],
    "react/no-multi-comp": [0],
    "eqeqeq": [2, "smart"],
    "id-length": [0],
    "object-curly-spacing": [0],
    "no-console": [0],
    "no-loop-func": [0],
    "no-constant-condition": [0],
    "new-cap": [2, {"capIsNew": false}],
    "no-shadow": [1],
    "quotes": [0],
    "semi": [0]
  },
  "parser": "babel-eslint"
}
